# We always want the loopback interface.
#
auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp
    pre-up [ -f /etc/network/local-network-ok ]

auto eth1
iface eth1 inet static
    address 192.168.1.1
    network 192.168.1.0
    netmask 255.255.255.0
    broadcast 192.168.1.255
    gateway 192.168.1.1
    pre-up [ -f /etc/network/local-network-ok ]

